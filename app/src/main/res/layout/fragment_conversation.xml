<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.conversation.ConversationFragment">

    <ImageButton
        android:id="@+id/paste_conv_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_content_copy_48"
        tools:layout_editor_absoluteX="237dp"
        tools:layout_editor_absoluteY="225dp" />

    <ImageButton
        android:id="@+id/copy_conv_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_content_paste_48"
        tools:layout_editor_absoluteX="293dp"
        tools:layout_editor_absoluteY="102dp" />

    <ImageButton
        android:id="@+id/decipher_conv_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/outline_lock_48"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="102dp" />

    <ImageButton
        android:id="@+id/cipher_conv_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_lock_open_48"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="134dp" />

    <ImageButton
        android:id="@+id/share_conv_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_share_48"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="225dp" />

    <ImageButton
        android:id="@+id/delete_conv_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/outline_delete_48"
        tools:layout_editor_absoluteX="323dp"
        tools:layout_editor_absoluteY="648dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="372dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="hint" />
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>